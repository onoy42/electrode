---
extends:
  - walmart/configurations/es6-test
rules:
  quotes:
    - error
    - double
    - avoidEscape: true
      allowTemplateLiterals: true
  prefer-arrow-callback: 0
  no-unused-expressions: 0
  no-magic-numbers: 0
  strict: 0
  max-len:
    - 2
    - 100
    - 2
    - ignorePattern: "^\\s*(?:it|describe)\\(.*"
  globals: 0
