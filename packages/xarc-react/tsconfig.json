{
  "compilerOptions": {
    "outDir": "dist-node-cjs",
    "lib": [
      "es2018"
    ],
    "module": "CommonJS",
    "esModuleInterop": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "moduleResolution": "Node"
  },
  "include": [
    "src/node",
    "src/common"
  ]
}
